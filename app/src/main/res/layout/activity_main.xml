<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@mipmap/bg_header">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:layout_marginTop="78dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:text="蓝天停车"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="27dp"
                android:text="欢迎使用蓝天停车移动商户端"/>



        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="67dp"
            android:src="@mipmap/ic_login_car"/>

    </LinearLayout>


    <!-- content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginTop="-16dp"
        android:elevation="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:orientation="vertical"
        android:background="@drawable/ll_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:text="登录"
            android:textStyle="bold"
            android:textColor="#ff303030"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="账号"
            android:textColor="#ff000000"
            android:textSize="14sp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_height"
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:text="Admin"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:drawableEnd="@mipmap/login_username_ic"
            android:background="@drawable/login_input_boarder"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="密码"
            android:textColor="#ff000000"
            android:textSize="14sp"
            />

        <EditText
            android:id="@+id/pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_input_height"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_input_boarder"
            android:drawableEnd="@mipmap/login_pwd_ic"
            android:inputType="textPassword"
            android:padding="12dp"
            android:text="Admin"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="44dp"
            android:text="登录"
            android:background="#2B86FF"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="忘记密码？"
            android:textColor="#ff3d90ff"
            android:textSize="12sp"
            />

    </LinearLayout>


</LinearLayout>