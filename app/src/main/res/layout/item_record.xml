<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlTop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/au_re_boarder_bg">

    <TextView
        android:id="@+id/ProvinceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/gui_bg"
        android:gravity="center"
        android:text="贵"
        android:textColor="#F5F9FF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/carNumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="59dp"
        android:layout_marginTop="17dp"
        android:text="A12345"
        android:textColor="#303030"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/isPresenceIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="134dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/green_point" />

    <TextView
        android:id="@+id/isPresenceTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="18dp"
        android:text="在场"
        android:textColor="#5AC40B"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/isEffectiveTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/au_re_boarder2"
        android:gravity="center"
        android:text="有效"
        android:textColor="#3D90FF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/takeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:background="@drawable/au_re_boarder_bg3"
        android:orientation="vertical"
        android:paddingStart="19dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/parkingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="车场"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/parkingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:text="中天停车场"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/startTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="授权开始时间"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/startTimeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2021-05-08 09:00"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/endTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="授权结束时间"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/endTimeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="2021-05-08 09:00"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/bindingStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定状态"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bindingStatusInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="已绑定"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/remarksTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/remarksInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="你的小摩托呀！"
                android:textColor="#333333"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>


